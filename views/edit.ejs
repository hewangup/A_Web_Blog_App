<%- include header %>
<div class="container">
<form method="post" action="/edit/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">
  <div class="form-group">
    <label for="title">Title:</label>
    <textarea class="form-control" rows="1" cols="100" name="title" disabled="disabled"><%= post.title %></textarea>
  </div>
  <div class="form-group">
    <label for="title">Tags:</label>
    <div class="form-inline">
      <textarea class="form-control" rows="1"  name="tag1" disabled="disabled"><%= post.tags[0] %></textarea>
      <textarea class="form-control" rows="1"  name="tag2" disabled="disabled"><%= post.tags[1] %></textarea>
      <textarea class="form-control" rows="1"  name="tag3" disabled="disabled"><%= post.tags[2] %></textarea>
    </div>
  </div>
  <div class="form-group">
    <label for="content">Content:</label>
    <textarea class="form-control" rows="20" cols="100" name="post"><%= post.post %></textarea>
  </div>
  <input type="submit" class="btn btn-primary btn-md" value="Update" />
</form>
</div>
<%- include footer %>
